{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source" : "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
        "headers" : [
          {
            "key" : "Access-Control-Allow-Origin",
            "value" : "*"
          }
        ]
      },
      {
        "source": "**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=960000"
          }
        ]
      },
      {
        "source" : "**/*.@(jpg|jpeg|gif|png)",
        "headers" : [
          {
            "key" : "Cache-Control",
            "value" : "max-age=7200"
          }
        ]
      }
    ]
  }
}
