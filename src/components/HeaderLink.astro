---
export interface Props extends astroHTML.JSX.AnchorHTMLAttributes {}

const { href, class: className, ...props } = Astro.props;
const path = Astro.url.pathname.replace(/\/$/, "");

const isHome = href === "/" && path === "";
const isOtherPages =
  typeof href === "string" && href.length > 1
    ? path.substring(1).startsWith(href.substring(1))
    : false;
const isActive = isHome || isOtherPages;
---

<a
  {href}
  class:list={[
    className,
    {
      "text-gray-900 underline hover:text-black dark:text-gray-100 dark:text-white dark:hover:text-white":
        isActive,
      "text-gray-600 hover:text-black dark:text-gray-500 dark:hover:text-white":
        !isActive,
    },
  ]}
  {...props}><slot /></a
>
