---
type Props = {
  url: string;
  label: string;
};

const { url, label } = Astro.props;
---

<div>
  <iframe
    class="youtube-iframe"
    src={url}
    title={label}
    frame-border="0"
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
    allowfullscreen
  >
  </iframe>
</div>

<style>
  .youtube-iframe {
    width: 100%;
    aspect-ratio: 16 / 9;
  }
</style>
