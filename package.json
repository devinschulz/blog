{
  "name": "blog",
  "version": "1.0.0",
  "description": "My personal blog",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write assets/**/*.{js,css} {content,archetypes,layouts}/**/*.{md,html} tailwind.config.js postcss.config.js ./**/*.toml",
    "prepare": "husky install",
    "clean": "rimraf public && rimraf ./assets/css/index/css",
    "start": "TAILWIND_MODE=watch NODE_ENV=development npm-run-all clean prelim:twcss --parallel dev:*",
    "build": "NODE_ENV=production npm-run-all clean prelim:twcss prod:*",
    "prelim:twcss": "npx tailwindcss ./assets/css/main.css -o ./assets/css/index.css --jit",
    "dev:twcssw": "npx tailwindcss ./assets/css/main.css -o ./assets/css/index.css --watch",
    "dev:hugo": "hugo server",
    "prod:twcss": "npx tailwindcss ./assets/css/main.css -o ./assets/css/index.css --jit --minify",
    "prod:hugo": "hugo --gc --minify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devinschulz/blog.git"
  },
  "author": "Devin Schulz",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/devinschulz/blog/issues"
  },
  "homepage": "https://github.com/devinschulz/blog#readme",
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "cross-env": "^7.0.3",
    "cssnano": "^6.0.1",
    "hugo-bin": "^0.118.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "postcss-cli": "^11.0.0",
    "postcss-color-function": "^4.1.0",
    "postcss-import": "^16.0.0",
    "postcss-mixins": "^9.0.2",
    "postcss-nested": "^6.0.1",
    "postcss-preset-env": "^9.3.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.0.3",
    "prettier-plugin-go-template": "^0.0.15",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "prettier-plugin-toml": "^2.0.1",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.1"
  },
  "dependencies": {
    "@hotwired/turbo": "^7.3.0",
    "npm-run-all": "^4.1.5"
  },
  "lint-staged": {
    "*.{js,css,md,toml}": "prettier --write"
  }
}
